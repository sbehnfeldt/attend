{% extends 'partials/base.html.twig' %}

{% block title %}Attend | Classrooms{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="js/classrooms.js"></script>
{% endblock %}


{% block main %}
    <div id="tabs">
        <ul>
            <li><a href="#classrooms-tab">Classrooms</a></li>
            <li><a href="#teachers">Teachers</a></li>
        </ul>

        <section class="tab" id="classrooms-tab">
            <table class="display compact">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Label</th>
                        <th>Order</th>
                        <th>Created</th>
                        <th>Updated</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <div class="buttons">
                <div class="record-buttons"></div>
                <div class="table-buttons"></div>
            </div>

            <div id="classroom-props-dlg" title="Add/Edit Classroom">
                <form>
                    <p class="update-tips"></p>
                    <input type="hidden" name="Id" id="Id">

                    <div class="form-box">
                        <label for="Label">Classroom Name</label>
                        <input type="text" name="Label" id="Label" class="required" required>
                    </div>

                    <div class="form-box">
                        <label for="Ordering">Order</label>
                        <input type="number" name="Ordering" id="Ordering">
                    </div>
                </form>
            </div>
        </section>

        <section class="tab" id="teachers">
            <h2>Teachers</h2>
        </section>
    </div>
{% endblock %}
