{% extends 'partials/base.html.twig' %}

{% block title %}Attend | Classrooms{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="js/classrooms.js"></script>
{% endblock %}


{% block main %}

    <div id="classrooms-tab">
        <h2>Classrooms</h2>

        <div class="table">
            <table class="display compact" id="classrooms-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Label</th>
                        <th>Order</th>
                        <th>Created</th>
                        <th>Created By</th>
                        <th>Updated</th>
                        <th>Updated By</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <div class="buttons" style="display: flex">
                <div class="record-buttons"></div>
                <div class="table-buttons"></div>
            </div>
        </div>

        <div class="dialog" id="classroom-props-dlg" title="Add/Edit Classroom">
            <form>
                <div class="error form-error"></div>
                <p class="update-tips"></p>
                <input type="hidden" name="Id" id="Id">

                <div class="form-box required">
                    <label for="Label">Classroom Name</label>
                    <div class="control-group">
                        <input type="text" name="Label" id="Label" class="required" required>
                        <div class="error label-error"></div>
                    </div>
                </div>

                <div class="form-box">
                    <label for="Ordering">Order</label>
                    <div class="control-group">
                        <input type="number" name="Ordering" id="Ordering">
                        <div class="error order-error"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
