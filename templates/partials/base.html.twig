            <link rel="stylesheet" type="text/css"
                  href="https://code.jquery.com/ui/1.13.2/themes/hot-sneaks/jquery-ui.css">

            <link rel="stylesheet" type="text/css"
                  href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
            <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">
            <link rel="stylesheet" href="https://cdn.datatables.net/select/1.7.0/css/select.dataTables.min.css">

            <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">

            <link rel="stylesheet" type="text/css" media="print" href="/print.css">
            <link rel="stylesheet" href="/attend.css">
        {% endblock %}

        <title>{% block title %}Insert Title Block{% endblock %}</title>
    </head>

    <body>

        <header>
            <h1>Attend</h1>
            <nav class="navbar main">
                {#                <input type="checkbox" class="toggle"> #}
                {#                <div class="hamburger"> #}
                {#                    <div class="bar"></div> #}
                {#                </div> #}

                <ul class="menu main-menu nav-menu" role="menu">
                    {% if perms.PAGE_ATTENDANCE %}
                        {#                        <li class="menu-item"><a href="attendance">Attendance</a></li> #}
                    {% endif %}
                    {% if perms.PAGE_ENROLLMENT %}
                        {#                        <li class="menu-item"><a href="enrollment">Enrollment</a></li> #}
                    {% endif %}
                    {#                    {% if perms.PAGE_CLASSROOMS %} #}
                    <li class="menu-item"><a href="/classrooms">Classrooms</a></li>
                    {#                    {% endif %} #}
                    {% if perms.PAGE_ADMIN %}
                        {#                        <li class="menu-item"><a href="admin">Admin</a></li> #}
                    {% endif %}
                    {% if perms.PAGE_PROFILE %}
                        {#                        <li class="menu-item"><a href="profile">Profile</a></li> #}
                    {% endif %}
                    <li class="menu-item"><a href="/admin">Admin</a></li>
                </ul>
                <ul class="profile-menu" role="menu">
                    <li>Logged in as {{ account.username }}</li>
                    <li class="menu-item"><a href="logout">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <div id="loading">
                <div id="loading-image"></div>
            </div>
            {% block main %}Insert Content Here{% endblock %}
        </main>

        {% block scripts %}
            <script type="application/javascript" src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
            <script type="application/javascript" src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>

            <script type="application/javascript"
                    src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

            <script type="application/javascript"
                    src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
            <script type="application/javascript"
                    src="//cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
            <script type="application/javascript"
                    src="https://cdn.datatables.net/select/1.7.0/js/dataTables.select.min.js"></script>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.6/handlebars.min.js"
