{% extends 'base.html.twig' %}

{% block title %}Setup{% endblock %}

{% block scripts %}
{{ parent() }}
    <script src="js/setup.js"></script>
{% endblock %}


{% block main %}
    <h1>Setup</h1>

    <div id="tabs">
        <ul>
            <li><a href="#classrooms-tab">Classrooms</a></li>
            <li><a href="#teachers">Teachers</a></li>
        </ul>

        <section id="classrooms-tab">
            <h2>Classrooms</h2>
            <table class="display compact">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Label</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <div class="run-buttons"></div>

            <div id="classroom-props-dlg" title="Add/Edit Classroom">
                <form>
                    <p class="update-tips"></p>
                    <input type="hidden" name="id">
                    <label>Classroom Name</label>
                    <input type="text" name="label">
                </form>
            </div>
        </section>

        <section id="teachers">
            <h2>Teachers</h2>
        </section>
    </div>
{% endblock %}
